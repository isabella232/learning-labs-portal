<!DOCTYPE html>
<html lang="en">
  <%- include('head') %>
  <body>
    <%- include('navbar', {active:'track'}) %>
    <div class="dochub-root">
      <div class="dochub">
        <div class="doc-title">
          <h1><i class="fa fa-list-ol mr-2"></i>Tracks</h1>
        </div>
        <div class="docs">
          <% tracks.forEach((track) => { %>
          <a href="/track/<%= track._id %>" class="doc">
            <div class="content-track">
              <h3><%= track.name %></h3>
              <h4 class="mt-3">
                <span><%= track.docs.length %></span>
                <span class="ml-1">Workshops</span>
              </h4>
              <p class="mt-4"><%= track.description %></p>
            </div>
          </a>
          <% }); %>
          <button id="button-create-track" class="doc">
            <div class="content-track new-track-button">
              <i class="fas fa-plus fa-3x"></i>
              <h3>Create a New Track</h3>
            </div>
          </button>
          <!-- Input modal for new track details -->
          <div class="modal fade" id="inputModal" role="dialog">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h2 class="modal-title">Create New Track</h2>
                  <button type="button" class="close" data-dismiss="modal">
                    &times;
                  </button>
                </div>
                <div class="modal-body">
                  <form>
                    <div class="form-group">
                      <label for="track-title">Track Title</label>
                      <input
                        type="text"
                        class="form-control"
                        id="track-title"
                      />
                    </div>
                    <div class="form-group">
                      <label for="track-desc">Track Description</label>
                      <input type="text" class="form-control" id="track-desc" />
                    </div>
                  </form>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-default"
                    data-dismiss="modal"
                  >
                    Close
                  </button>
                  <button
                    id="button-add-track"
                    type="button"
                    class="btn btn-primary"
                  >
                    Submit
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/track_all.js"></script>
  </body>
</html>
